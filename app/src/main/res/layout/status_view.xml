<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/stprofile_img"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:src="@drawable/proffpic"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_gravity="center"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="#189C0E"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/stname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trusha"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/stday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yesterday, "
            android:textSize="16sp"
            android:textColor="#80FFFFFF"
            android:layout_below="@id/stname"/>
        <TextView
            android:id="@+id/sttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00AM"
            android:textSize="16sp"
            android:textColor="#80FFFFFF"
            android:layout_toRightOf="@+id/stday"
            android:layout_below="@id/stname"/>
    </RelativeLayout>

</LinearLayout>